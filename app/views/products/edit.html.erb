<%= form_for :product, url: products_path(@product), method: :patch do |f| %>
<h1>Editing product</h1>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :short %><br>
    <%= f.text_area :short %>
  </p>
  <p>
    <%= f.label :long %><br>
    <%= f.text_area :long %>
  </p>
  <p>
    <%= f.label :images %><br>
    <%= f.text_field :images %>
  </p>
<p>
    <%= f.label :featured %><br>
    <%= f.check_box :featured %>
  </p>
  <p>
    <%= f.label :in_stock %><br>
    <%= f.check_box :in_stock %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
 
<%= link_to 'Back', products_path %>
