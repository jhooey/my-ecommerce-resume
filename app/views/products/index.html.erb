<h1>Listing posts</h1>
 <%= link_to 'New post', new_product_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Short Description</th>
    <th>Long Description</th>
    <th>images</th>
    <th>Featured</th>
    <th>in_stock</th>
  </tr>
 
  <% @products.each do |product| %>
    <tr>
      <td><%= product.title %></td>
      <td><%= product.short %></td>
      <td><%= product.long %></td>
      <td><%= product.images %></td>
      <td><%= product.featured %></td>
      <td><%= product.in_stock %></td>
      <td><%= link_to 'Show', product %></td>
      <td><%= link_to 'Edit', edit_product_path(product) %></td>
      <td><%= link_to 'Destroy', product_path(product), confirm: 'Are you sure?', :method => :delete, :class => "submit-button" %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'Back', products_path %>