<h1>Listing posts</h1>
 <%= link_to 'New post', new_product_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Featured</th>
  </tr>
 
  <% @products.each do |product| %>
    <tr>
      <td><%= product.title %></td>
      <td><%= product.text %></td>
      <td><%= product.featured %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'Back', products_path %>