<%= form_for :product, url: products_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
<p>
    <%= f.label :featured %><br>
    <%= f.check_box :featured %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
