			<footer id="bottom">
				<p>
					&copy; Copyright by Jacob Hooey
				</p>
			</footer>
		</div>
		
		<script type="text/javascript">
	         function swap(image) {
	             document.getElementById("main-image").src = image.href;
	         }
	     </script>
		
		<script>
		$(document).ready(function () {
		
			$('nav .checkout').hover(
				function () {
					//show its submenu
					$('ul#shopping-cart').stop().slideDown(100);
		
				}, 
				function () {
					//hide its submenu
					$('ul#shopping-cart').stop().slideUp(100);			
				}
			);
			
		});
		</script>
	</body>
</html>
